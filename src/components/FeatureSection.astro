---
import AnimatedSection from './AnimatedSection.astro';

interface Props {
	title: string;
	description: string;
	videoUrl?: string;
	imageUrl?: string;
	imageAlt?: string;
	reverse?: boolean;
}

const { title, description, videoUrl, imageUrl, imageAlt = "Feature image", reverse = false } = Astro.props;
---

<AnimatedSection>
<section class="py-16 md:py-24 bg-white">
	<div class="max-w-7xl mx-auto px-4 md:px-16">
		<div class={`grid md:grid-cols-2 gap-12 items-center ${reverse ? 'md:flex-row-reverse' : ''}`}>
			<!-- Content -->
			<div class={`space-y-6 ${reverse ? 'md:order-2' : ''}`}>
				<h2 class="text-3xl md:text-5xl font-black text-gray-900 leading-tight">
					{title}
				</h2>
				<p class="text-lg text-gray-700 leading-relaxed">
					{description}
				</p>
				<div>
					<button class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"/>
						</svg>
						Ver v√≠deo
					</button>
				</div>
			</div>
			
			<!-- Image/Video -->
			<div class={`relative ${reverse ? 'md:order-1' : ''}`}>
				<div class="relative rounded-2xl overflow-hidden bg-gray-200 aspect-video shadow-xl">
					{imageUrl ? (
						<img src={imageUrl} alt={imageAlt} class="w-full h-full object-cover" />
					) : (
						<div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-yellow-200 to-pink-200">
							<div class="text-center p-8">
								<p class="text-2xl font-bold text-gray-800">{imageAlt}</p>
							</div>
						</div>
					)}
					
					<!-- Play button overlay -->
					<div class="absolute inset-0 flex items-center justify-center">
						<button class="w-20 h-20 bg-white rounded-full flex items-center justify-center shadow-lg hover:scale-110 transition-transform">
							<svg class="w-8 h-8 text-pink-500 ml-1" fill="currentColor" viewBox="0 0 20 20">
								<path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"/>
							</svg>
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
</AnimatedSection>

