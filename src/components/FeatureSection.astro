---
import AnimatedSection from './AnimatedSection.astro';

interface Props {
	title: string;
	description: string;
	videoUrl?: string;
	imageUrl?: string;
	imageAlt?: string;
	reverse?: boolean;
}

const { title, description, videoUrl, imageUrl, imageAlt = "Feature image", reverse = false } = Astro.props;
---

<AnimatedSection>
<section class="py-16 md:py-24 bg-white">
	<div class="max-w-7xl mx-auto px-4 md:px-16">
		<div class={`grid md:grid-cols-2 gap-12 items-center ${reverse ? 'md:flex-row-reverse' : ''}`}>
			<!-- Content -->
			<div class={`space-y-6 ${reverse ? 'md:order-2' : ''}`}>
				<h2 class="text-4xl md:text-[36px] font-bold text-black leading-tight">
					{title}
				</h2>
				<p class="text-lg text-black/55 leading-relaxed font-medium">
					{description}
				</p>
				<div>
					<a 
						href={videoUrl || '#'} 
						class="inline-block bg-black text-white px-4 py-3 rounded-xl font-medium text-lg hover:opacity-90 transition-opacity"
					>
						Ver v√≠deo
					</a>
				</div>
			</div>
			
			<!-- Image/Video -->
			<div class={`relative ${reverse ? 'md:order-1' : ''}`}>
				<div class="relative rounded-2xl overflow-hidden bg-gray-200 aspect-video">
					{imageUrl ? (
						<img src={imageUrl} alt={imageAlt} class="w-full h-full object-cover" />
					) : (
						<div class="w-full h-full flex items-center justify-center bg-gray-100">
							<div class="text-center p-8">
								<p class="text-2xl font-bold text-gray-800">{imageAlt}</p>
							</div>
						</div>
					)}
					
					<!-- Play button overlay -->
					<div class="absolute inset-0 flex items-center justify-center">
						<button class="w-[100px] h-[100px] bg-white rounded-full flex items-center justify-center shadow-lg hover:scale-110 transition-transform">
							<svg class="w-10 h-10 text-black ml-2" fill="currentColor" viewBox="0 0 24 24">
								<path d="M8 5v14l11-7z"/>
							</svg>
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
</AnimatedSection>

