<footer class="bg-black text-white py-16">
	<div class="max-w-7xl mx-auto px-4 md:px-16">
		<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8">
			<!-- Logo and Navigation -->
			<div class="flex flex-col md:flex-row gap-6 md:gap-[60px] items-start md:items-center">
				<!-- Logo -->
				<div class="w-[175px] h-[43px]">
					<img src="/icons/Vector-6.svg" alt="CIONG" class="w-full h-full object-contain" />
				</div>
				
				<!-- Navigation -->
				<nav class="flex flex-col md:flex-row gap-4 md:gap-8 text-xl font-medium">
					<a href="#" class="text-white/55 hover:text-white transition-colors">Quiénes somos</a>
