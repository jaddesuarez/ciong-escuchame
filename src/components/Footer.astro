				</nav>
			</div>
			
			<!-- Social Links -->
			<div class="flex gap-6">
				<a 
					href="#" 
					aria-label="Instagram"
					class="w-6 h-6 hover:opacity-70 transition-opacity"
				>
					<img src="/icons/Social link 1.svg" alt="Instagram" class="w-full h-full" />
				</a>
				<a 
					href="#" 
					aria-label="LinkedIn"
					class="w-6 h-6 hover:opacity-70 transition-opacity"
				>
					<img src="/icons/Social link 2.svg" alt="LinkedIn" class="w-full h-full" />
				</a>
				<a 
					href="#" 
					aria-label="X (Twitter)"
					class="w-6 h-6 hover:opacity-70 transition-opacity"
				>
					<img src="/icons/Social link 3.svg" alt="X" class="w-full h-full" />
				</a>
			</div>
		</div>
	</div>
