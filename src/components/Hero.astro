---
import AnimatedSection from './AnimatedSection.astro';
---

<section class="relative bg-[#FDDA59] pt-32 pb-20 md:pt-40 md:pb-32 overflow-hidden">
	<div class="max-w-7xl mx-auto px-4 md:px-16 relative z-10">
		<div class="grid md:grid-cols-2 gap-12 items-center">
			<!-- Text Content -->
			<AnimatedSection delay={0}>
				<div class="space-y-12">
					<div class="space-y-6">
						<h1 class="text-5xl md:text-[64px] font-black leading-[1.1] text-black tracking-tight">
							ESCÚCHAME
						</h1>
						<p class="text-xl md:text-2xl text-black/55 leading-[1.4] max-w-md font-medium tracking-tight">
							Campaña para ayudarnos a sentir, entender y actuar mejor con las personas con pérdida auditiva
						</p>
					</div>
					<div>
						<a 
							href="#recursos" 
							class="inline-block bg-black text-white px-4 py-3 rounded-xl font-medium text-lg hover:opacity-90 transition-opacity"
						>
							Ver guía didáctica
						</a>
					</div>
				</div>
			</AnimatedSection>
			
			<!-- Illustration -->
			<AnimatedSection delay={200}>
				<div class="relative h-[436px] flex items-center justify-center">
					<img 
						src="/icons/Group.svg" 
						alt="Ilustración de personas conversando" 
						class="w-full h-full object-contain"
					/>
				</div>
			</AnimatedSection>
		</div>
	</div>
</section>
