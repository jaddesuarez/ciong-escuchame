---
import AnimatedSection from './AnimatedSection.astro';
---

<AnimatedSection>
<section class="py-20 md:py-20 bg-white">
	<div class="max-w-7xl mx-auto px-4 md:px-16">
		<p class="text-center text-xl text-black/55 mb-8 font-medium">
			Con la colaboración de
		</p>
		<div class="flex flex-wrap items-center justify-center gap-6 opacity-50 h-[84px]">
			<!-- Logo 1 - Cooperación Internacional -->
			<div class="h-full flex items-center justify-center px-4">
				<img src="/icons/Vector-12.svg" alt="Cooperación Internacional" class="h-full w-auto object-contain" />
			</div>
			<!-- Logo 2 - T-Oigo -->
			<div class="h-full flex items-center justify-center px-4">
				<img src="/images/logo T-Oigo_BN 1.png" alt="T-Oigo" class="h-[55px] w-auto object-contain" />
			</div>
			<!-- Logo 3 - Fundación -->
			<div class="h-full flex items-center justify-center px-4">
				<img src="/icons/Vector-9.svg" alt="Fundación" class="h-[55px] w-auto object-contain" />
			</div>
		</div>
	</div>
</section>
</AnimatedSection>

