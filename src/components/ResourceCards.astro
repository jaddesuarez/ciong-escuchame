---
import AnimatedSection from './AnimatedSection.astro';
---

<AnimatedSection>
<section id="recursos" class="py-16 md:py-24 bg-gray-50">
	<div class="max-w-7xl mx-auto px-4 md:px-16">
		<!-- Header -->
		<h2 class="text-3xl md:text-5xl font-black text-gray-900 mb-12">
			Recursos
		</h2>
		
		<!-- Cards Grid -->
		<div class="grid md:grid-cols-2 gap-6 max-w-4xl">
			<!-- Card 1 -->
			<div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
				<div class="bg-gradient-to-br from-yellow-300 to-yellow-400 p-12 min-h-[240px] flex items-center justify-center">
					<div class="text-center">
						<h3 class="text-3xl font-black text-gray-900 leading-tight">
							GUÍA<br />DIDÁCTICA
						</h3>
					</div>
				</div>
				<div class="p-6 space-y-4">
					<p class="text-gray-700">
						Descarga la guía didáctica con sugerencias de actividades para trabajar en el aula.
					</p>
					<a 
						href="#" 
						class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700 transition-colors"
					>
						Descargar →
					</a>
				</div>
			</div>
			
			<!-- Card 2 -->
			<div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
				<div class="bg-gradient-to-br from-blue-300 to-blue-400 p-12 min-h-[240px] flex items-center justify-center">
					<div class="text-center">
						<h3 class="text-3xl font-black text-gray-900 leading-tight">
							CRÓNICAS<br />DE MARCOS
						</h3>
					</div>
				</div>
				<div class="p-6 space-y-4">
					<p class="text-gray-700">
						Conoce el diario de Marcos durante su proceso de implantación.
					</p>
					<a 
						href="#" 
						class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700 transition-colors"
					>
						Descargar →
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
</AnimatedSection>

