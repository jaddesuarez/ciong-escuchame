---
import AnimatedSection from './AnimatedSection.astro';
import ResourceCard from './ResourceCard.astro';

const cards = [
	{
		title: 'Guía didáctica',
		description: 'Descarga la guía didáctica con sugerencias de actividades para trabajar en el aula.',
		linkText: 'Descargar',
	},
	{
		title: 'Diario de Marcos',
		description: 'Conoce el diario de Marcos durante su proceso de implantación.',
		linkText: 'Descargar',
	},
];
---

<AnimatedSection>
<section id="recursos" class="py-16 md:py-24 bg-gray-50">
	<div class="max-w-7xl mx-auto px-4 md:px-16">
		<!-- Header -->
		<h2 class="text-4xl md:text-[36px] font-bold text-black mb-12">
			Recursos
		</h2>
		
		<!-- Cards Grid -->
		<div class="flex gap-6 max-w-4xl">
			{cards.map(card => (
				<ResourceCard
					title={card.title}
					description={card.description}
					linkText={card.linkText}
				/>
			))}
		</div>
	</div>
</section>
</AnimatedSection>

