---
import AnimatedSection from './AnimatedSection.astro';
---

<AnimatedSection>
<section id="recursos" class="py-16 md:py-24 bg-gray-50">
	<div class="max-w-7xl mx-auto px-4 md:px-16">
		<!-- Header -->
		<h2 class="text-4xl md:text-[36px] font-bold text-black mb-12">
			Recursos
		</h2>
		
		<!-- Cards Grid -->
		<div class="grid md:grid-cols-2 gap-6 max-w-4xl">
			<!-- Card 1 -->
			<div class="bg-white rounded-2xl overflow-hidden">
				<div class="bg-[#FDDA59] p-6 min-h-[240px] flex items-center justify-center">
					<img src="/images/Image.png" alt="Guía didáctica" class="w-full h-full object-cover" />
				</div>
				<div class="p-6 space-y-4">
					<p class="text-lg text-black/55 font-medium leading-relaxed">
						Descarga la guía didáctica con sugerencias de actividades para trabajar en el aula.
					</p>
					<a 
						href="#" 
						class="inline-flex items-center text-lg font-medium text-black hover:opacity-70 transition-opacity"
					>
						Descargar →
					</a>
				</div>
			</div>
			
			<!-- Card 2 -->
			<div class="bg-white rounded-2xl overflow-hidden">
				<div class="bg-[#007BC4] p-6 min-h-[240px] flex items-center justify-center">
					<img src="/images/Image-1.png" alt="Crónicas de Marcos" class="w-full h-full object-cover" />
				</div>
				<div class="p-6 space-y-4">
					<p class="text-lg text-black/55 font-medium leading-relaxed">
						Conoce el diario de Marcos durante su proceso de implantación.
					</p>
					<a 
						href="#" 
						class="inline-flex items-center text-lg font-medium text-black hover:opacity-70 transition-opacity"
					>
						Descargar →
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
</AnimatedSection>

