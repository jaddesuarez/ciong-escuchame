---
import AnimatedSection from './AnimatedSection.astro';
import ResourceCard from './ResourceCard.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const cards = [
	{
		title: t('resources.guide.title'),
		description: t('resources.guide.description'),
		linkText: t('resources.guide.link'),
		pdfPath: `/pdf/escuchame_${lang}.pdf`,
	},
	{
		title: t('resources.diary.title'),
		description: t('resources.diary.description'),
		linkText: t('resources.diary.link'),
		pdfPath: `/pdf/cronicas_${lang}.pdf`,
	},
];
---

<AnimatedSection>
<section id="recursos" class="py-16 md:py-24 bg-white">
	<div class="max-w-7xl mx-auto px-4 md:px-16">
		<!-- Header -->
		<h2 class="text-4xl md:text-[36px] font-bold text-black mb-12">
			{t('resources.title')}
		</h2>
		
		<!-- Cards Grid -->
		<div class="flex flex-col md:flex-row gap-6 max-w-4xl">
			{cards.map(card => (
				<ResourceCard
					title={card.title}
					description={card.description}
					linkText={card.linkText}
					pdfPath={card.pdfPath}
				/>
			))}
		</div>
	</div>
</section>
</AnimatedSection>

