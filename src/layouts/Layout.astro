---
import { getLangFromUrl } from '../i18n/utils';

interface Props {
	title?: string;
	description?: string;
}

const lang = getLangFromUrl(Astro.url);

const { 
	title = lang === 'ca' 
		? 'Escolta\'m - Campanya de sensibilització sobre pèrdua auditiva'
		: 'Escúchame - Campaña de sensibilización sobre pérdida auditiva',
	description = lang === 'ca'
		? 'Campanya per ajudar-nos a sentir, entendre i actuar millor amb les persones amb pèrdua auditiva'
		: 'Campaña para ayudarnos a sentir, entender y actuar mejor con las personas con pérdida auditiva'
} = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body class="font-sans antialiased">
		<slot />
	</body>
</html>

<style is:global>
	@import '../styles/global.css';
	
	body {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
	}
</style>

