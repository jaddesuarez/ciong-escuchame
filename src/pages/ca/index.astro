---
import Layout from "../../layouts/Layout.astro"
import Navigation from "../../components/Navigation.astro"
import Hero from "../../components/Hero.astro"
import LogosSection from "../../components/LogosSection.astro"
import BarriersSection from "../../components/BarriersSection.astro"
import FeatureSection from "../../components/FeatureSection.astro"
import ResourceCards from "../../components/ResourceCards.astro"
import ContactSection from "../../components/ContactSection.astro"
import Footer from "../../components/Footer.astro"
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout>
  <main>
    <div class="flex flex-col bg-yellow">
      <Navigation />
      <Hero />
    </div>

    <LogosSection />

    <BarriersSection />

    <div class="bg-gray-light">
      <!-- Feature: How the ear works -->
      <FeatureSection
        title={t('feature.ear.title')}
        description={t('feature.ear.description')}
        imageUrl="/images/Image-1.webp"
        imageAlt={t('feature.ear.alt')}
        videoUrl="https://www.youtube.com/watch?v=B_K16AnSxXI&t=12s"
      />

      <!-- Feature: Day to day life -->
      <FeatureSection
        title={t('feature.daily.title')}
        description={t('feature.daily.description')}
        imageUrl="/images/Image-2.webp"
        imageAlt={t('feature.daily.alt')}
        reverse={true}
        videoUrl="https://www.youtube.com/watch?v=TNli_l1mEdg"
      />

      <!-- Feature: Cochlear implant -->
      <FeatureSection
        title={t('feature.implant.title')}
        description={t('feature.implant.description')}
        imageUrl="/images/Image-3.webp"
        imageAlt={t('feature.implant.alt')}
        videoUrl="https://www.youtube.com/watch?v=Hk4yc0uDLrQ&t=5s"
      />

      <!-- Feature: Conversation -->
      <FeatureSection
        title={t('feature.conversation.title')}
        description={t('feature.conversation.description')}
        imageUrl="/images/Image-4.webp"
        imageAlt={t('feature.conversation.alt')}
        reverse={true}
        videoUrl="https://www.youtube.com/watch?v=dYbaIFQQvrI"
      />
    </div>

    <ResourceCards />

    <ContactSection />
  </main>

  <Footer />
</Layout>

